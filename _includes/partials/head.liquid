<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{ title | default: site.title }}</title>
<meta name="description" content="{{ description | default: site.description }}">
<meta name="author" content="{{ site.author }}">

<!-- Preload critical resources -->
<link rel="preload" href="/assets/logo.png" as="image">
<link rel="preload" href="/assets/fonts/TestMartinaPlantijn-Light-BF663c36d1dbbe7.otf" as="font" type="font/otf" crossorigin>
<link rel="preload" href="/assets/fonts/TestMartinaPlantijn-Bold-BF663c36d1d4676.otf" as="font" type="font/otf" crossorigin>
<link rel="preload" href="/css/style.css" as="style">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

<!-- Immediate theme detection to prevent FOUC -->
<script>
(function() {
    // Apply theme immediately before CSS loads
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'dark') {
        document.documentElement.classList.add('dark-mode');
    }
})();
</script>

<!-- Critical CSS inlined to prevent flash -->
<style>
:root {
  /* Light Mode Design Tokens */
  --color-text-primary: rgb(6, 6, 6);
  --color-background-primary: rgb(227, 227, 227);
  --color-border: #ccc;
  --color-code-bg: #f5f5f5;
  --color-pre-bg: #f8f8f8;
  --color-pre-border: #e0e0e0;
  --color-project-card-bg: #fff;
  
  /* Dark Mode Design Tokens */
  --dark-color-text-primary: rgb(220, 220, 220);
  --dark-color-background-primary: rgb(20, 20, 20);
  --dark-color-border: #444;
  --dark-color-code-bg: #2a2a2a;
  --dark-color-pre-bg: #1e1e1e;
  --dark-color-pre-border: #333;
  --dark-color-project-card-bg: #2a2a2a;
  --dark-color-gray-text: #bbb;
  --dark-color-gray-text-secondary: #999;
  --dark-color-tech-tag-bg: #333;
  --dark-color-tech-tag-text: #ccc;
  --dark-color-link-subtle: #bbb;
  
  /* Light mode gray colors */
  --color-gray-text: #555;
  --color-gray-text-secondary: #666;
  --color-tech-tag-bg: #f0f0f0;
  --color-tech-tag-text: #333;
  --color-link-subtle: #333;
  
  /* Typography */
  --font-family-light: "Martina Light", serif;
  --font-family-bold: "Martina Bold", serif;
  --font-size-base: 16px;
  --font-size-large: 20px;
  --line-height-base: 1.6;
  --line-height-text: 1.5;
  
  /* Layout */
  --layout-max-width: 740px;
  --layout-header-height: 80px;
  --spacing-md: 1.5em;
  --spacing-xs: 0.5em;
}

@font-face {
    font-family: 'Martina Light';
    src: url('../assets/fonts/TestMartinaPlantijn-Light-BF663c36d1dbbe7.otf') format('opentype');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Martina Bold';
    src: url('../assets/fonts/TestMartinaPlantijn-Bold-BF663c36d1d4676.otf') format('opentype');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
}

body {
    font-family: var(--font-family-light);
    font-size: var(--font-size-base);
    line-height: var(--line-height-base);
    color: var(--color-text-primary);
    margin: 0;
    padding: 0;
    background-color: var(--color-background-primary);
    overflow-x: hidden;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.main-content {
    padding-top: var(--layout-header-height);
    padding-left: 0;
    padding-right: 0;
    padding-bottom: var(--spacing-md);
}

.main-content article {
     max-width: var(--layout-max-width);
     margin: var(--spacing-xs) auto;
}

html.dark-mode {
  --color-text-primary: var(--dark-color-text-primary);
  --color-background-primary: var(--dark-color-background-primary);
  --color-border: var(--dark-color-border);
  --color-code-bg: var(--dark-color-code-bg);
  --color-pre-bg: var(--dark-color-pre-bg);
  --color-pre-border: var(--dark-color-pre-border);
  --color-project-card-bg: var(--dark-color-project-card-bg);
  --color-gray-text: var(--dark-color-gray-text);
  --color-gray-text-secondary: var(--dark-color-gray-text-secondary);
  --color-tech-tag-bg: var(--dark-color-tech-tag-bg);
  --color-tech-tag-text: var(--dark-color-tech-tag-text);
  --color-link-subtle: var(--dark-color-link-subtle);
}
</style>

