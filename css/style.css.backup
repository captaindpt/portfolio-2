  --content-margin-top: 0.5rem; /* Control top margin */
  --content-margin-horizontal: 1rem; /* Control left/right margins */
  --content-margin-bottom: 0.5rem; /* Control bottom margin */
  
  /* Work Container Side Margins - Easy Experimentation */
  --work-container-side-margin: 12.5vw; /* Current: 1/8 of viewport width each side */
  
  /* 
  Quick Switch Options (replace the line above):
  
  Minimal margins:
  --work-container-side-margin: 6.25vw;   // 1/16 of viewport 
  
  Current (1/8):
  --work-container-side-margin: 12.5vw;   // 1/8 of viewport 
  
  Generous (1/4):
  --work-container-side-margin: 25vw;     // 1/4 of viewport 
  
  Very generous (1/3):
  --work-container-side-margin: 33.33vw;  // 1/3 of viewport 
  
  Fixed margins:
  --work-container-side-margin: 3rem;     // Fixed 3rem
  --work-container-side-margin: 5rem;     // Fixed 5rem
  
  No margins (full width):
  --work-container-side-margin: 0;        // Edge to edge
  */
  
  /* Work Section Size Ratios (adjust these to change section sizes) */
  --work-section-1-ratio: 1.2fr; /* Professional Experience - slightly larger */
  --work-section-2-ratio: 1.3fr; /* Side Projects - largest section */
  --work-section-3-ratio: 0.7fr; /* Everything Else - smaller */
  --work-divider-spacing: 0.8rem; /* Space between sections */
  
  /*
  CUSTOMIZATION EXAMPLES:
  
  For minimal margins (edge-to-edge):
  --content-margin-horizontal: 0.5rem;
  --content-margin-top: 0.5rem;
  --content-margin-bottom: 0.5rem;
  
  For more generous spacing:
  --content-margin-horizontal: 4rem;
  --content-margin-top: 2rem;
  --content-margin-bottom: 2rem;
  
  To make Professional Experience larger:
  --work-section-1-ratio: 1.5fr;
  --work-section-2-ratio: 1fr;
  --work-section-3-ratio: 0.8fr;
  
  To emphasize Side Projects:
  --work-section-1-ratio: 0.8fr;
  --work-section-2-ratio: 1.5fr;
  --work-section-3-ratio: 0.7fr;
  
  To minimize Everything Else:
  --work-section-1-ratio: 1.2fr;
  --work-section-2-ratio: 1.2fr;
